		</navigation-case>
	</navigation-rule>
		<navigation-rule>
		<from-view-id>/dettagliOrdineAdmin.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controllerOrdine.evadiOrdine()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/ordineEvaso.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>

