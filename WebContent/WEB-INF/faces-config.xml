	</navigation-rule>
	<navigation-rule>
		<from-view-id>/dettagliOrdineCliente.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controllerOrdine.ordiniCliente()}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/listinoOrdiniCliente.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
