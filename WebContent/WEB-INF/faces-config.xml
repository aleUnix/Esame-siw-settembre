			<to-view-id>/faces/dettagliProdottoAdmin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/dettagliProdotto.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/faces/catalogoProdotti.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/operazioniAdmin.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controllerProdotto.listaProdotti()}</from-action>
