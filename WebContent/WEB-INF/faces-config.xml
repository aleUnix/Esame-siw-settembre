			<from-outcome>success</from-outcome>
			<to-view-id>/faces/dettagliProdottoAdmin.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/dettagliProdottoPerOrdine.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
